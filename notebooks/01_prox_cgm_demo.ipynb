"""
Interactive demo of Prox-CGM
Run this in Jupyter or as a script
"""

import numpy as np
import matplotlib.pyplot as plt
from pathlib import Path
import sys

# Add src to path
sys.path.append(str(Path(__file__).parent.parent / 'src'))

from prox_cgm import ProxCGM, create_lasso_problem

def interactive_demo():
    """Interactive demo with plots"""
    print("PROX-CGM INTERACTIVE DEMO")
    print("=" * 50)
    
    # Let user choose problem size
    print("\nChoose problem size:")
    print("1. Small (50x20) - Quick run")
    print("2. Medium (200x50) - Realistic")
    print("3. Paper size (506x13) - Housing dataset")
    
    choice = input("Enter choice (1-3): ")
    
    if choice == '1':
        n_samples, n_features = 50, 20
    elif choice == '2':
        n_samples, n_features = 200, 50
    else:
        n_samples, n_features = 506, 13
    
    # Generate data
    np.random.seed(42)
    A = np.random.randn(n_samples, n_features) / np.sqrt(n_samples)
    x_true = np.zeros(n_features)
    x_true[:5] = np.random.randn(5)  # 5 important features
    b = A @ x_true + 0.1 * np.random.randn(n_samples)
    
    # Choose regularization
    print(f"\nDataset: {n_samples} samples × {n_features} features")
    lam = float(input("Enter regularization λ (default 0.1): ") or "0.1")
    
    # Create problem
    f_func, f_grad, h_func, h_prox = create_lasso_problem(A, b, lam)
    
    # Choose solver parameters
    print("\nSolver parameters:")
    max_iter = int(input(f"Max iterations (default 500): ") or "500")
    eta = float(input(f"Restart threshold η (default 0.1): ") or "0.1")
    
    # Create and run solver
    solver = ProxCGM(
        max_iter=max_iter,
        tol=1e-6,
        eta=eta,
        gamma=1e-4,
        rho=0.5,
        verbose=True
    )
    
    x0 = np.zeros(n_features)
    x_opt = solver.fit(f_func, f_grad, h_func, h_prox, x0)
    
    # Interactive plots
    fig = plt.figure(figsize=(15, 5))
    
    # Plot 1: Convergence
    ax1 = plt.subplot(1, 3, 1)
    ax1.plot(solver.f_history, 'b-', linewidth=2)
    ax1.set_xlabel('Iteration')
    ax1.set_ylabel('Objective F(x)')
    ax1.set_title('Convergence History')
    ax1.grid(True, alpha=0.3)
    ax1.set_yscale('log')
    
    # Plot 2: Solution
    ax2 = plt.subplot(1, 3, 2)
    ax2.stem(range(n_features), x_true, 'r-', markerfmt='ro', 
             basefmt=" ", label='True', linefmt='r-')
    ax2.stem(range(n_features), x_opt, 'b-', markerfmt='bx', 
             basefmt=" ", label='Estimated', linefmt='b-')
    ax2.set_xlabel('Feature index')
    ax2.set_ylabel('Coefficient value')
    ax2.set_title(f'Solution (λ={lam})')
    ax2.legend()
    ax2.grid(True, alpha=0.3)
    
    # Plot 3: Algorithm behavior
    ax3 = plt.subplot(1, 3, 3)
    iterations = range(len(solver.theta_history))
    
    ax3.plot(iterations, solver.theta_history, 'g-', label='θ (blending)', linewidth=2)
    ax3.plot(iterations, solver.alpha_history, 'b-', label='Step size α', alpha=0.7)
    
    # Mark restarts
    restart_indices = [i for i, r in enumerate(solver.restart_flags) if r == 1]
    if restart_indices:
        ax3.scatter(restart_indices, 
                   [solver.theta_history[i] for i in restart_indices],
                   color='red', s=100, zorder=5, label='Restarts', 
                   edgecolors='black', linewidth=1)
    
    ax3.set_xlabel('Iteration')
    ax3.set_ylabel('Parameter value')
    ax3.set_title('Algorithm Behavior')
    ax3.legend()
    ax3.grid(True, alpha=0.3)
    
    plt.tight_layout()
    plt.show()
    
    # Print summary
    print("\n" + "=" * 50)
    print("SUMMARY")
    print("=" * 50)
    print(f"Final objective: {solver.f_history[-1]:.6f}")
    print(f"Solution sparsity: {100*np.sum(np.abs(x_opt)<1e-4)/len(x_opt):.1f}% zeros")
    print(f"True sparsity: {100*np.sum(np.abs(x_true)<1e-4)/len(x_true):.1f}% zeros")
    print(f"Total iterations: {len(solver.f_history)-1}")
    print(f"Number of restarts: {sum(solver.restart_flags)}")
    print(f"Mean θ: {np.mean(solver.theta_history):.3f}")
    
    return solver, x_opt

if __name__ == "__main__":
    solver, x_opt = interactive_demo()
